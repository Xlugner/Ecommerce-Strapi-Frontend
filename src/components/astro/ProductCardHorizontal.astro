---
import { getStrapiMedia } from '../../lib/strapi';
import type { Product } from '../../lib/strapi';

interface Props {
  product: Product;
}

const { product } = Astro.props;
const { name, price, slug, image } = product;
const imageUrl = getStrapiMedia(image?.[0]?.url);

---

<!--
  COMPONENTE: ProductCardHorizontal
  
  Formato horizontal para mostrar en listas por categoría
  Muestra: imagen a la izquierda, info a la derecha, flecha para ver más
-->

<div class="bg-gray-50 rounded-lg overflow-hidden hover:shadow-md transition-shadow">
  <a href={`/productos/${slug}`} class="flex items-center gap-4 p-3">
    
    <!-- Imagen del producto -->
    <div class="flex-shrink-0 w-20 h-20 bg-white rounded-lg overflow-hidden">
      <img
        src={imageUrl}
        alt={name}
        class="w-full h-full object-contain"
        loading="lazy"
      />
    </div>

    <!-- Información del producto -->
    <div class="flex-1 min-w-0">
      <h3 class="text-gray-800 font-semibold text-sm line-clamp-1 mb-1">
        {name}
      </h3>
      <p class="text-gray-500 text-xs line-clamp-1 mb-2">
        Sigue evolucionando e...
      </p>
      
      <!-- Precios -->
      <div class="flex items-center gap-2">
        <span class="text-primary-500 font-bold text-lg">
          $ {price.toLocaleString()}
        </span>
      </div>
    </div>

    <!-- Flecha para ver más -->
    <div class="flex-shrink-0">
      <div class="w-8 h-8 bg-primary-500 rounded-lg flex items-center justify-center text-white">
        <svg class="w-4 h-4" fill="none" stroke-Linecap="round" stroke-Linejoin="round" stroke-Width="2" viewBox="0 0 24 24" stroke="currentColor">
          <path d="M9 5l7 7-7 7" />
        </svg>
      </div>
    </div>
  </a>
</div>

<style>
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>